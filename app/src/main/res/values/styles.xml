<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/light_blue_500</item>
        <!--<item name="android:padding">4dp</item>-->
    </style>
    <!--      <item format="float" name="alpha" type="dimen">0.6</item>-->


    <!--
        <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>
    -->

    <style name="MyThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
       <!-- <item name="android:textColorPrimary">@color/colorWhite</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
    </style>


    <style name="Widget.FinTrack.TextView" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>


    <style name="TextThemeHeadline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/emphasisTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextThemeBody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/subtitleTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextThemeNote" parent="TextAppearance.MaterialComponents.Body2">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">
            @drawable/background_splash
        </item>

    </style>

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:state_selected">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>

    </style>

</resources>