<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <Switch
        android:id="@+id/darkmodeswitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/dark_mode"
        android:textAppearance="?attr/textAppearanceBody1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/categoryTV"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_weight="1"
            android:text="Set up list of categories" />

        <View style="@style/verticalDivider"  />



        <ImageButton
            android:id="@+id/imageButtonCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:srcCompat="@drawable/ic_outline_add_24" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/accountTV"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="Set up list of accounts" />

        <View style="@style/verticalDivider"/>


        <ImageButton
            android:id="@+id/imageButtonAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:srcCompat="@drawable/ic_outline_account_balance_24" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exportTV"
            android:layout_width="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="Export data to a spreadsheet" />

        <View style="@style/verticalDivider"/>


        <ImageButton
        android:id="@+id/imageButtonExport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
        app:srcCompat="@drawable/ic_baseline_import_export_24" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/deleteTV"
            android:layout_width="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="Delete all data in the app" />

        <View style="@style/verticalDivider"/>


        <ImageButton
            android:id="@+id/imageButtonDeleteAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:srcCompat="@drawable/ic_outline_delete_outline_24" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sendFeedback"
            android:layout_width="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="Send Feedback" />

        <View style="@style/verticalDivider"/>

        <ImageButton
            android:id="@+id/imageButtonSendFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:srcCompat="@drawable/ic_baseline_feedback_24" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="About" />

        <View style="@style/verticalDivider"/>

        <ImageButton
            android:id="@+id/imageButtonAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:srcCompat="@drawable/ic_twotone_info_24" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/opensource"
            android:layout_width="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="Open source" />

        <View style="@style/verticalDivider"/>

        <ImageButton
            android:id="@+id/imageButtonOpenSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:srcCompat="@drawable/ic_baseline_policy_24" />


    </LinearLayout>



</LinearLayout>